{
  "name": "simple-flip-motion",
  "version": "1.0.1",
  "description": "Zero-config UI transitions using FLIP technique. Lightweight alternative to auto-animate.",
  "author": {
    "name": "AntonVoronezh",
    "email": "anton.voronezh.1990@gmail.com",
    "url": "https://github.com/AntonVoronezh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntonVoronezh/simple-flip-motion.git"
  },
  "bugs": {
    "url": "https://github.com/AntonVoronezh/simple-flip-motion/issues"
  },
  "homepage": "https://github.com/AntonVoronezh/simple-flip-motion#readme",
  "funding": [
    {
      "type": "boosty",
      "url": "https://boosty.to/antonvoronezh/donate"
    },
    {
      "type": "crypto",
      "url": "https://t.me/AntonVoronezhh/5"
    }
  ],
    "files": [
    "dist",
    "README.md",
    "LICENSE",
    "banner.js"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react.ts src/vue.ts src/svelte.ts src/solid.ts src/angular.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "postinstall": "node ./banner.js || exit 0"
  },
  "keywords": [
    "animation",
    "flip",
    "react",
    "vue",
    "svelte",
    "solid",
    "angular",
    "ui",
    "transition",
    "auto-animate"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.mjs",
      "require": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./vue": {
      "import": "./dist/vue.mjs",
      "require": "./dist/vue.js",
      "types": "./dist/vue.d.ts"
    },
    "./svelte": {
      "import": "./dist/svelte.mjs",
      "require": "./dist/svelte.js",
      "types": "./dist/svelte.d.ts"
    },
    "./solid": {
      "import": "./dist/solid.mjs",
      "require": "./dist/solid.js",
      "types": "./dist/solid.d.ts"
    },
    "./angular": {
      "import": "./dist/angular.mjs",
      "require": "./dist/angular.js",
      "types": "./dist/angular.d.ts"
    }
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0",
    "svelte": ">=3.0.0",
    "solid-js": ">=1.0.0",
    "@angular/core": ">=14.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "svelte": {
      "optional": true
    },
    "solid-js": {
      "optional": true
    },
    "@angular/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@angular/core": "^17.0.0",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "vue": "^3.3.0",
    "svelte": "^4.0.0",
    "solid-js": "^1.8.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "jsdom": "^23.0.0"
  }
}
